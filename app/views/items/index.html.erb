<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Dept</th>
      <th>Aisle</th>
      <th>Store</th>
      <th>Name</th>
      <th>Brand</th>
      <th>Price</th>
      <th>Size</th>
      <th>Type</th>
      <th>Sale pct</th>
      <th>Img url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.dept_id %></td>
        <td><%= item.aisle_id %></td>
        <td><%= item.store_id %></td>
        <td><%= item.name %></td>
        <td><%= item.brand %></td>
        <td><%= item.price %></td>
        <td><%= item.size %></td>
        <td><%= item.type %></td>
        <td><%= item.sale_pct %></td>
        <td><%= item.img_url %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
